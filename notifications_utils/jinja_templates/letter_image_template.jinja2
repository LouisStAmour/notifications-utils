{% for page_number in page_numbers %}
  <div class="letter">
    {% if loop.first and postage %}
      <p class="letter-postage letter-postage-{{ postage }}">
        Postage: {{ postage }} class
      </p>
    {% endif %}
    <img src="{{ image_url }}?page={{ page_number }}" alt="" loading="{{ 'eager' if loop.first else 'lazy' }}">
  </div>
{% endfor %}

<div class="visually-hidden">
  <h3>
    Recipient address
  </h3>
  <p>
    {{ address }}
  </p>
  <h3>
    Contact block
  </h3>
  <p>
    {{ contact_block }}
  </p>
  <h3>
    Content
  </h3>
  <p>
    {{ date }}
  </p>
  <h3>
    {{ subject }}
  </h3>
  {{ message }}
</div>
